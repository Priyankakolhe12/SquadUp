<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAF6FF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/editTeamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., CodeMasters"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_bg"
            android:padding="12dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., Smart India Hackathon"
            android:layout_marginTop="8dp"
            android:background="@drawable/search_bg"
            android:padding="12dp"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Team Description"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp" />

        <EditText
            android:id="@+id/editDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Describe your team goals, roles..."
            android:layout_marginTop="8dp"
            android:minLines="3"
            android:gravity="top|start"
            android:background="@drawable/search_bg"
            android:padding="12dp"
            android:textSize="14sp" />

        <Button
            android:id="@+id/btnCreateTeam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Team"
            android:layout_marginTop="32dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white" />

    </LinearLayout>

</ScrollView>
