<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <!-- Toolbar -->
    <RelativeLayout
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/purple_500"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/toolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Event Details"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <!-- Scrollable Event Content -->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/joinButton"
        android:layout_below="@id/toolbarLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <ImageView
                android:id="@+id/eventImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/img_1" />

            <TextView
                android:id="@+id/eventTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Title"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/eventDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Event Description"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date: 1st Jan 2025"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mode: Online"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventSkills"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Skills: Flutter, Figma"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventLink"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registration Link"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventCollege"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="College: ABC University"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventLastDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last Date: 28 Dec 2024"
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/eventNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Additional Notes here."
                android:layout_marginTop="8dp"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

    <!-- JOIN EVENT Button -->
    <Button
        android:id="@+id/joinButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Event ðŸš€"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        android:layout_margin="16dp"
        android:textSize="18sp"
        android:padding="12dp" />

</RelativeLayout>
